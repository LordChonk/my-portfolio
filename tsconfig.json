{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "module": "Node16",
    "rootDir": "./src",
    "outDir": "./dist",
    "allowImportingTsExtensions": true,
    "noEmit": true 
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
